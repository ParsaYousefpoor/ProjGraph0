<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Login.Signup">
   <children>
      <Button layoutX="278.0" layoutY="361.0" mnemonicParsing="false" onAction="#login" text="Login" />
      <Button layoutX="276.0" layoutY="262.0" mnemonicParsing="false" onAction="#create" text="Create" />
      <Label layoutX="234.0" layoutY="330.0" text="Already have an account?" />
      <Label fx:id="label" alignment="CENTER" layoutY="229.0" prefHeight="17.0" prefWidth="602.0" />
      <TextField fx:id="name" layoutX="227.0" layoutY="55.0" promptText="Name" />
      <TextField fx:id="username" layoutX="227.0" layoutY="80.0" promptText="Username" />
      <TextField fx:id="password" layoutX="227.0" layoutY="105.0" promptText="Password" />
      <TextField fx:id="recovery" layoutX="227.0" layoutY="143.0" promptText="Answer" />
      <Label layoutY="138.0" text="Security answer for password recovery:" />
      <Label layoutY="155.0" text="What is the name of your first teacher?" />
      <RadioButton fx:id="normal" layoutX="248.0" layoutY="23.0" mnemonicParsing="false" text="Normal account">
         <toggleGroup>
            <ToggleGroup fx:id="tg" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="business" layoutX="245.0" layoutY="6.0" mnemonicParsing="false" text="Business account" toggleGroup="$tg" />
      <Label layoutY="109.0" prefHeight="17.0" prefWidth="206.0" text="Password must be at least 8 characters" />
   </children>
</AnchorPane>
